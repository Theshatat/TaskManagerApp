@model TaskManagerApp.Models.TaskItem

@{
    ViewData["Title"] = "Create";
}

<h1>@ViewData["Title"] New Task <i class="bi bi-check2-square"></i></h1>

<div class="d-flex justify-content-center align-items-center">
    <div class="card shadow p-4" style="width: 400px;" >
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter Task Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" placeholder="Enter Task Description" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="DueDate" class="control-label">Due Date <i class="bi bi-calendar-event"></i></label>
                <input asp-for="DueDate" class="form-control" type="date" />
                <span asp-validation-for="DueDate" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Status" class="control-label">Status <i class="bi bi-hourglass-split text-secondary"></i></label>
                <input asp-for="Status" class="form-control" placeholder="Enter Task Status" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                @if (ViewBag.Categories == null || !((IEnumerable<SelectListItem>)ViewBag.Categories).Any())
                {
                    <div class="alert alert-warning">
                        @if (ViewBag.Message != null)
                        {
                            <p>@ViewBag.Message</p>
                        }
                        else
                        {
                            <p>No categories found. Please <a asp-controller="Categories" asp-action="Create">create a category first</a>.</p>
                        }
                    </div>
                }
                else
                {
                    <div class="form-group mb-3">
                        <label asp-for="CategoryId" class="form-label"></label>
                        @Html.DropDownList("CategoryId", (SelectList)ViewBag.Categories, "Select Category", new { @class = "form-select" })
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                }
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-success">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
